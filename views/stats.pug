doctype html
html
	head
		title #{i18n.__("stats.title")}
		<!--Import Google Icon Font-->
		link(rel="stylesheet", href="/static/css/icon.css")
		<!--Import materialize.css-->
		link(rel="stylesheet", href="/static/css/materialize.min.css", media="screen, projection")
		link(rel="stylesheet", href="/static/css/customize.css")
		<!--Let browser know website is optimized for mobile-->
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
	body
		header
			nav.top-nav
				.container
					.nav-wrapper
						a.page-title.brand-logo.truncate #{i18n.__("stats.page-title")}
						ul.right.hide-on-large-only
							li
								a.dropdown-button(data-activates='nav-dropdown')
									i.material-icons menu
						ul.dropdown-content#nav-dropdown
							li
								a.waves-effect(href="/!") #{i18n.__("nav.dashboard")}
							li
								a.waves-effect(href="/!post") #{i18n.__("nav.posts")}
							li
								a.waves-effect(href="/!page") #{i18n.__("nav.pages")}
							li
								a.waves-effect(href="/!logout") #{i18n.__("nav.logout")}
							li.active
								a.waves-effect.white-text(href="/!stats") #{i18n.__("nav.stats")}
							li
								a.waves-effect(href="/!about") #{i18n.__("nav.about")}
			ul.side-nav.fixed
				li
					a.nav-logo(href="/")
						i.material-icons local_cafe
						| #{i18n.__("nav-logo")}
				li
					.divider
				li
					a.subheader #{i18n.__("nav.subheader1")}
				li
					a.waves-effect(href="/!") #{i18n.__("nav.dashboard")}
				li
					a.waves-effect(href="/!post") #{i18n.__("nav.posts")}
				li
					a.waves-effect(href="/!page") #{i18n.__("nav.pages")}
				li
					a.waves-effect(href="/!logout") #{i18n.__("nav.logout")}
				li
					.divider
				li
					a.subheader #{i18n.__("nav.subheader2")}
				li.active
					a.waves-effect.white-text(href="/!stats") #{i18n.__("nav.stats")}
				li
					a.waves-effect(href="/!about") #{i18n.__("nav.about")}
		main
			.container
				.row
					.col.s12.m9.l10
						.section
							h2.header #{i18n.__("stats.section1.header1")}
							p.caption #{i18n.__("stats.section1.caption1")} #{postCounts} #{i18n.__("stats.section1.caption2")}, #{pageCounts} #{i18n.__("stats.section1.caption3")}.
							h2.header #{i18n.__("stats.section1.header2")}
							p.caption #{i18n.__("stats.section1.caption4")}
								| 
								b #{post_asset_folder}
							p.caption #{i18n.__("stats.section1.caption5")}
								| 
								b #{deploy}
							p.caption #{i18n.__("stats.section1.caption6")}
								| 
								b #{theme}
							
		script(src="/static/js/jquery-3.2.1.min.js", type="text/javascript")
		script(src="/static/js/materialize.min.js", type="text/javascript")